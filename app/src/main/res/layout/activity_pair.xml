<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vnox.coupletunesvx.pairActivity"
    android:id="@+id/emailInput">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No partner Add yet. \n See information below : )"
        android:id="@+id/partnerStatus"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/myInput"
        android:layout_alignEnd="@+id/myInput" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/myInput"
        android:layout_marginTop="39dp"
        android:text="MyUserName"
        android:layout_below="@+id/partnerStatus"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Add"
        android:id="@+id/confirmButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Me In"
        android:id="@+id/logInButton"
        android:layout_above="@+id/confirmButton"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/partnerInput"
        android:text="PartnerName"
        android:layout_below="@+id/myInput"
        android:layout_alignLeft="@+id/myInput"
        android:layout_alignStart="@+id/myInput"
        android:layout_alignRight="@+id/partnerStatus"
        android:layout_alignEnd="@+id/partnerStatus" />

</RelativeLayout>
