<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vnox.coupletunesvx.locSettingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/infoTag"
        android:textSize="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ringtoneId"
        android:layout_alignEnd="@+id/ringtoneId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ring Tone :"
        android:id="@+id/ringtoneId"
        android:layout_below="@+id/infoTag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vibe Pattern :"
        android:id="@+id/vibeId"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/vibeButton"
        android:layout_alignStart="@+id/vibeButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Tone"
        android:id="@+id/ringButton"
        android:layout_below="@+id/ringtoneId"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Pattern"
        android:id="@+id/vibeButton"
        android:layout_below="@+id/vibeId"
        android:layout_alignLeft="@+id/ringButton"
        android:layout_alignStart="@+id/ringButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Vibe/Tone"
        android:id="@+id/testPlayButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DeleteME"
        android:id="@+id/deleteButton"
        android:layout_above="@+id/testPlayButton"
        android:layout_alignRight="@+id/vibeId"
        android:layout_alignEnd="@+id/vibeId" />
</RelativeLayout>
